{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Suicides Based on Gender and Age",
    "description": "BUBBLE CHART - SUICIDE DEATHS BY GENDER & AGE GROUPS",
    "data": {
      "url": "data/totalSuicidesByGenderAge.csv"
    },
    "width": "container",
    "height": "container",
    "transform": [
      { "filter": "datum.Year == Year_selection" }],
    "layer": [
      {
        "mark": {
          "type": "circle",
          "opacity": 0.8,
          "stroke": "black",
          "strokeWidth": 1
        },
        "encoding": {
          "x": {
            "field": "Age_Range",
            "type": "nominal",
            "axis": { "grid": false },
            "title": "Age Range"
          },
          "y": {
            "field": "Sex",
            "type": "nominal",
            "sort": ["Male", "Female"],
            "axis": { "title": "Gender" }
          },
          "size": {
            "field": "Suicides",
            "type": "quantitative",
            "title": "Suicide Deaths",
            "legend": { "clipHeight": 40 },
            "scale": { "rangeMax": 5000, "domain": [0, 50000] }
          },
          "color": {
            "field": "Sex",
            "type": "nominal",
            "scale": { "range": ["#ffa760", "#60b2ff"] },
            "legend": null
          },
          "tooltip": [
            { "field": "Sex", "title": "Gender" },
            { "field": "Year", "title": "Year" },
            { "field": "Suicides", "title": "Suicide Count" }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "color": "black",
          "fontSize": 10,
          "dx": 10,
          "xOffset": -100,
          "yOffset": -140,
          "dy": 0,
          "align": "left"
        },
        "encoding": {
          "text": {
            "value": [
              "Suicide fatalities among males surpass",
              "those among females across all age groups."
            ]
          },
          "opacity": {
            "value": 0.3
          }
        }
      },
      {
        "mark": {
          "type": "text",
          "color": "black",
          "fontSize": 10,
          "dx": 10,
          "xOffset": -100,
          "yOffset": 0,
          "dy": 0,
          "align": "left"
        },
        "encoding": {
          "text": {
            "value": [
              "Suicide counts overall peak in the age",
              "range of 20 to 59 for both genders",
              "thoughout the years."
            ]
          },
          "opacity": {
            "value": 0.3
          }
        }
      }
    ],
    "params": [
      {
        "name": "Year_selection",
        "value": 1950,
        "bind": {
          "input": "range",
          "min": 1950,
          "max": 2021,
          "step": 1,
          "name": "Year: "
        }
      }
    ]
  }
  