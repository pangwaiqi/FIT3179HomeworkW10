{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Death Rate 1985-2019",
  "width": "container",
  "height": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
  },

  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1985,
        "max": 2019,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": { "tooltip": { "field": "note" } }
    },
    {
      "data": {
        "url": "data/globalSuicides.csv"
      },
      "params": [
        { "name": "hover", "select": { "type": "point", "on": "mouseover" } }
      ],
      "transform": [
        {
          "lookup": "Country Name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        { "filter": "datum.Year == Year_selection" }
      ],
      "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
      "encoding": {
        "description": { "field": "Country Name" },
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "condition": {
            "param": "hover",
            "field": "Death rate per 100 000 population",
            "title": ["Death Rate", "(per 100,000", "population)", ""],
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [20, 40, 60, 80],
              "range": ["#feedde", "#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
            }
          },
          "value": "lightgrey"
        },
        "tooltip": [
          { "field": "Country Name", "type": "nominal" },
          {
            "field": "Death rate per 100 000 population",
            "type": "quantitative",
            "title": "Death rate per 100 000 population",
            "format": ","
          },
          { "field": "Year", "type": "quantitative" }
        ],
        "strokeWidth": {
          "condition": { "param": "hover", "empty": false, "value": 1 },
          "value": 1
        },
        "opacity": {
          "condition": {
            "param": "hover",
            "empty": false,
            "value": 1
          },
          "value": 1
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": { "type": "topojson", "feature": "oceans" }
      },
      "mark": { "type": "geoshape", "fill": "skyblue" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mingsheng2002/3179/main/Week-9-Homework/js/ne_110m_graticules_30.json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mingsheng2002/3179-Data-Visualisation-Project-2/main/choropleth_map/data/Continent_location.csv"
      },
      "mark": {
        "type": "text",
        "color": "black",
        "fontWeight": "bolder",
        "fontSize": 12
      },
      "encoding": {
        "text": { "field": "Continent", "type": "nominal" },
        "latitude": { "field": "Latitude", "type": "quantitative" },
        "longitude": { "field": "Longitude", "type": "quantitative" }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/data/countryInfo.csv"
            },
            "key": "name",
            "fields": ["latitude", "longitude"]
          }
        }
      ],
      "mark": {
        "type": "text",
        "fontSize": 10,
        "color": "black",
        "fontStyle": "bold",
        "stroke": "whitesmoke",
        "strokeWidth": 0.015
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "black",
        "fontSize": 10,
        "fontStyle": "italic",
        "dx": 10,
        "xOffset": -65,
        "yOffset": -270,
        "dy": 0,
        "align": "left"
      },
      "encoding": {
        "text": {
          "value": [
            "Over the years, it can be",
            "observed that Europe's",
            "death rate has reduced",
            "significantly"
          ]
        },
        "opacity": {
          "value": 0.025
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "black",
        "fontSize": 10,
        "fontStyle": "italic",
        "dx": 10,
        "xOffset": 200,
        "yOffset": 0,
        "dy": 0,
        "align": "left"
      },
      "encoding": {
        "text": {
          "value": [
            "Malaysia's death rate has remained",
            "low (its colour has always been light",
            "orange) throughout the years."
          ]
        },
        "opacity": {
          "value": 0.025
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "black",
        "fontSize": 10,
        "fontStyle": "italic",
        "dx": 10,
        "xOffset": 200,
        "yOffset": 90,
        "dy": 0,
        "align": "left"
      },
      "encoding": {
        "text": {
          "value": [
            "Australia's death rate has decreased",
            "throughout the years (from darker",
            "orange to lighter orange)"
          ]
        },
        "opacity": {
          "value": 0.025
        }
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "background": "#ffffff",
    "font": "Montserrat, sans-serif",
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 12
    }
  }
}
